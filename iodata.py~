def iodata():
    #dic = extract.extract(100, 'train_pro.txt', 'true')
    for i in range(0, len(sslist)):
        inlist = []
        outlist = []
        for j in range(0, len(sslist[i])):
            _str = sslist[i][j].split()
            for k in range(0, len(_str)):
                if(len(_str)>Ngram):
                    if((len(_str)-k)>Ngram):
                        #indata = [dic[_str[k]],dic[_str[k+1]],dic[_str[k+2]]]
